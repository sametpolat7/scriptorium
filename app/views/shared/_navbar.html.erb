<nav class="flex items-center border-b-2 h-20 fixed w-full top-0 bg-white z-10">
  <div class="flex items-center justify-end w-2/12">
    <%= image_tag("scriptorium_logo.png", size: "50x50", alt: "brand_logo") %>
    <%= link_to "Scriptorium", root_path, class: "text-3xl font-serif font-medium tracking-tight ml-2" %>
  </div>

  <div class="flex justify-center w-4/12">
    <%= form_tag(search_path, method: :get) do %>
      <div class="flex items-center">
        <%= text_field_tag :query, params[:query], placeholder: t("search_placeholder"), class: "rounded-full px-4 py-2 placeholder:text-sm italic" %>
        <%= image_submit_tag("search.svg", class: "py-2 px-6 ml-2 rounded bg-gray-50 hover:bg-gray-200") %>
      </div>
    <% end %>
  </div>
  
  <div class="flex justify-end items-center w-6/12 text-lg font-semibold">
    <%= link_to t("homepage"), root_path, class: "ml-8" %>
    <%= link_to t("discover"), articles_path, class: "ml-8" %>

    <% if user_signed_in? %>
      <%= link_to t("write_article"), new_article_path, class: "rounded-full py-1 px-4 bg-yellow-300 hover:bg-yellow-200 ml-8" %>
      <div class="flex">
        <div class="flex items-center ml-8">
          <%= image_tag("avatar.png", size: "25x25", alt: "avatar") %>
          <%= link_to current_user.username, user_path(current_user.username), class: "mr-1" %>
        </div>
        |
        <%= link_to t("logout"), destroy_user_session_path, data: { turbo_method: :delete }, class: "ml-1" %>
      </div>
    <% else %>
      <div>
        <%= link_to t("login"), new_user_session_path, class: "ml-8" %>
      </div>
    <% end %>
    <ul class="flex mr-4 ml-8">
      <li>
        <%= link_to image_tag("turkey-flag.svg", alt: "Turkish"), url_for(locale: 'tr') %>
      </li>
      <li>
        <%= link_to image_tag("uk-flag.svg", alt: "English"), url_for(locale: 'en') %>
      </li>
    </ul>
  </div>
</nav>
<div class="pt-20"></div>
