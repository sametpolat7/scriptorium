<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= image_tag "github.svg", alt: "GitHub", class: "inline-block w-12 h-12 mr-4" %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "px-24 py-4 border-2 rounded-full hover:border-blue-900 font-medium text-lg" %><br />
  <% end %>
<% end %>
